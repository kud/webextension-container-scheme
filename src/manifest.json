{
    "manifest_version": 2,
    "name": "Container Scheme",
    "description": "Simple tool to open links in specific Firefox containers. Click the toolbar icon, select a container, and copy the URL (e.g., ext+container:name=Work&url=https://github.com) for the current page. Perfect for Raycast, Alfred, and other launcher apps.",
    "version": "2.0.0",

    "browser_specific_settings": {
        "gecko": {
            "id": "{4d4aee45-b821-48a9-801c-d4a05821de76}"
        }
    }, 

    "icons": {
        "19": "icons/extension-19.png",
        "48": "icons/extension-48.png",
        "96": "icons/extension-96.png"
    },

    "protocol_handlers": [{
        "protocol": "ext+container",
        "name": "Container Scheme",
        "uriTemplate": "/opener.html#%s"
    }],

    "browser_action": {
        "default_icon": "icons/extension-19.png",
        "default_title": "Container Scheme",
        "default_popup": "popup.html"
    },

    "permissions": [
        "contextualIdentities",
        "cookies",
        "tabs",
        "bookmarks",
        "storage"
    ]
}
